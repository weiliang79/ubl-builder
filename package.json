{
  "name": "ubl-builder",
  "version": "1.4.3",
  "description": "Tool to create xml documents with UBL 2.0 standard",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "publish-npm": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipesanta/ubl-builder.git"
  },
  "keywords": [
    "ubl2",
    "UBL",
    "2.1",
    "xml"
  ],
  "author": "Felipe Santa <juansantag95@gmail.com> (https://github.com/pipesanta/ubl-builder.git)",
  "contributors": [
    {
      "name": "Lars Buur",
      "email": "lars@buur.org"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pipesanta/ubl-builder/issues"
  },
  "homepage": "https://github.com/pipesanta/ubl-builder#readme",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "weeknumber": "^1.2.1",
    "xmlbuilder": "^15.1.1",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.2.5",
    "prettier": "^2.1.1",
    "ts-jest": "^27.0.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  }
}
